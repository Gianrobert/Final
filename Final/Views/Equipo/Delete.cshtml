@model Final.Models.Equipo

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center my-4">Delete Equipo</h1>

<h3 class="text-center">Are you sure you want to delete this equipo?</h3>

<div class="row justify-content-center">
    <div class="col-md-8">
        <h4 class="mt-3">Equipo Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Descripcion)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Descripcion)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Marca)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Marca)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Modelo)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Modelo)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.FechaAdquisicion)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.FechaAdquisicion)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Estado)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Estado)
            </dd>
        </dl>

        <div class="d-flex justify-content-between">
            <form asp-action="Delete" class="d-inline">
                <input type="hidden" asp-for="EquipoId" />
                <input type="submit" value="Delete" class="btn btn-danger btn-lg" />
            </form>

            <a asp-action="Index" class="btn btn-secondary btn-lg">Back to List</a>
        </div>
    </div>
</div>

