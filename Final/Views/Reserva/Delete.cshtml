@model Final.Models.Reserva

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center my-4">Delete Reserva</h1>

<div class="container">
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Reserva Details</h4>
        <hr />
        <dl class="row">
            <!-- FechaReserva -->
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FechaReserva)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FechaReserva)
            </dd>

            <!-- FechaInicio -->
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FechaInicio)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FechaInicio)
            </dd>

            <!-- FechaFin -->
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FechaFin)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FechaFin)
            </dd>

            <!-- Estado -->
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Estado)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Estado)
            </dd>

            <!-- Equipo -->
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Equipo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Equipo.EquipoId)
            </dd>

            <!-- Usuario -->
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Usuario)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Usuario.UsuarioId)
            </dd>
        </dl>

        <!-- Delete Form -->
        <form asp-action="Delete">
            <input type="hidden" asp-for="ReservaId" />
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary ml-3">Back to List</a>
            </div>
        </form>
    </div>
</div>

