@model Final.Models.Factura

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center my-4">Delete Factura</h1>

<div class="row justify-content-center">
    <div class="col-md-8">
        <h3 class="text-center mb-4">Are you sure you want to delete this?</h3>
        <div class="card p-4 shadow-sm">
            <h4>Factura</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.NumeroFactura)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.NumeroFactura)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.FechaEmision)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.FechaEmision)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.FechaVencimiento)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.FechaVencimiento)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Total)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Total)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Pago)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Pago.PagoId)
                </dd>
            </dl>
            <form asp-action="Delete" class="text-center mt-4">
                <input type="hidden" asp-for="FacturaId" />
                <button type="submit" class="btn btn-danger btn-lg">Delete</button>
                <a asp-action="Index" class="btn btn-secondary btn-lg ml-3">Back to List</a>
            </form>
        </div>
    </div>
</div>

