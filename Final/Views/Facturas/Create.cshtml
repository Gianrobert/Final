@model Final.Models.Factura

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center my-4">Create Factura</h1>

<h4>Factura</h4>
<hr />
<div class="row">
    <div class="col-md-6 offset-md-3">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group">
                <label asp-for="PagoId" class="control-label">Pago</label>
                <select asp-for="PagoId" class="form-control" asp-items="ViewBag.PagoId">
                    <option value="">Select a payment</option>
                </select>
                <span asp-validation-for="PagoId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NumeroFactura" class="control-label">Numero Factura</label>
                <input asp-for="NumeroFactura" class="form-control" />
                <span asp-validation-for="NumeroFactura" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FechaEmision" class="control-label">Fecha Emisión</label>
                <input asp-for="FechaEmision" class="form-control" type="date" />
                <span asp-validation-for="FechaEmision" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FechaVencimiento" class="control-label">Fecha Vencimiento</label>
                <input asp-for="FechaVencimiento" class="form-control" type="date" />
                <span asp-validation-for="FechaVencimiento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Total" class="control-label">Total</label>
                <input asp-for="Total" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Total" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Create" class="btn btn-success btn-lg" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
