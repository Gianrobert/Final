@model Final.Models.Usuario

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center my-4">Delete Usuario</h1>

<div class="container">
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Usuario</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Apellido)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Apellido)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Telefono)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Telefono)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.TipoUsuario)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.TipoUsuario)
            </dd>
        </dl>
    </div>

    <!-- Delete Form -->
    <form asp-action="Delete">
        <input type="hidden" asp-for="UsuarioId" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger btn-block" />
        </div>
    </form>

    <!-- Back to List Link -->
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary btn-block">Back to List</a>
    </div>
</div>

