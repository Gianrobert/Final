@model Final.Models.Pago

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center my-4">Pago Details</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h4>Pago Information</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Monto)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Monto)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.FechaPago)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.FechaPago)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.MetodoPago)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.MetodoPago)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Estado)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Estado)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Reserva)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Reserva.ReservaId)
                </dd>
            </dl>

            <div class="text-center mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.PagoId" class="btn btn-warning btn-lg">Edit</a>
                <a asp-action="Index" class="btn btn-secondary btn-lg ml-3">Back to List</a>
            </div>
        </div>
    </div>
</div>
